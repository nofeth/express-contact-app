<%- include ('layouts/header') %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-8">
                <h2>Detail Contact</h2>
                <% if (!data) { %>
                  <div class="alert alert-danger">
                    <strong>Data tidak ditemukan </strong><br> <a href="/contact" class="alert-link fw-normal">Kembali Ke daftar kontak</a>
                  </div>
                <% } else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= data.nama %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= data.noHp %></h6>
                      <p class="card-text"><%= data.email %><p>
                        <a href="/contact/delete/<%= data.nama %>" class="btn btn-danger badge">hapus</a>
                      <a href="/contact" class="card-link d-block mt-3">&laquo; Mengarah ke daftar kontak</a>
                    </div>
                  </div>
                  <% } %>
            </div>
        </div>
    </div>


<%- include ('layouts/footer') %>