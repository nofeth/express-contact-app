<%- include('layouts/header') %>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary my-2">Tambah Data Contact</a>
        </div>
        <% if (msg.length !== 0) { %>
         <div class="alert alert-success" role="alert">
            <%= msg %>
         </div>
        <% } %>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No Hp</th>
                    <th scope="col">Email</th>
                    <th scope="col">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (data.length === 0) { %>
                   <tr>
                    <td colspan="4">
                        <div class="alert alert-danger">
                          <strong>Data tidak ditemukan </strong><br> <a href="/contact" class="alert-link fw-normal">Kembali Ke daftar kontak</a>
                        </div>
                    </td>
                   </tr>
                  <% }%>
                <% data.forEach((element,i) => { %>
                    <tr>
                        <th scope="row"><%= ++i %></th>
                        <td><%= element.nama %></td>
                        <td><%= element.noHp %></td>
                        <td><%= element.email %></td>
                        <td><a class="btn btn-success" href="/contact/<%= element.nama %>">Detail</a></td>
                    </tr>
                <% }) %>
            </tbody>
         </table>
    </div>
</div>

<%- include('layouts/footer') %>